<p id="notice"><%= notice %></p>

<div class="well">
<h1><%= @question.title %></h1>

<% if @question.body =~ /\w/%>
  <%= @question.body %>
<% end %>
</div>
<p>
  <b>Status:</b>
  <%= @question.status %> |
  <b>Asked on:</b>
  <%= @question.asked_on %> |
  <b>Asked by:</b>
  <%= @question.asked_by %>
</p>


<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>
